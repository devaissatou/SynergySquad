pipeline {
    agent any

    stages {
        stage('Récupération du code') {
            steps {
                git branch: 'dev-insa',
         credentialsId: '279ce16a-9cd4-4402-a8d2-87253dc39d96',
          url: 'https://github.com/devaissatou/SynergySquad.git'
            }
        }
        stage('Build de l’image de l’application') {
            steps {
		dir("app") {
                    sh 'docker build -t synergysquad_php-apache-environment -f Dockerfile .'
                }
            }
        }
        stage('Build de l’image de la base de données') {
            steps {
		dir("app") {
                    sh 'docker build -t synergysquad_database-environment -f Dockerfile1 .'
                }
            }
        }
        stage('Déploiement des services') {
            steps {
                   sh 'docker-compose -f docker-compose.yml up -d'
            }
        }
        stage('Test de l’application') {
            steps {
                sh 'curl http://localhost:8000'
                sh 'firefox http://localhost:8000'
            }
        }
        stage('Tag des images Docker') {
            steps {
                sh 'docker tag app-image devinsa777/php:8.2-rc-apache'
                sh 'docker tag db-image devinsa777/mysql:8.0'
            }
        }
        stage('Push des images Docker sur Docker Hub') {
            steps {
                sh 'docker push devinsa777/php:8.2-rc-apache'
                sh 'docker push devinsa777/mysql:8.0'
            }
        }
    }
}
