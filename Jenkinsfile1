pipeline {
    agent any 

    stages {
        stage('Récupération du code') {
            steps {
                git branch: 'dev_sega',
          credentialsId: '050fd63a-9e70-4839-ab4d-ea1659d77f1f',
          url: 'https://github.com/devaissatou/SynergySquad.git'
            }
        }
        stage('Build de l’image de l’application') {
            steps {
		dir("app") 
		{
                sh 'docker build -t app_synergietransport:1.0.0 -f Dockerfile .'
            }
        }
		}
        stage('Build de l’image de la base de données') {
            steps {
		dir("app") 
	{
                sh 'docker build -t db_synergietransport:1.0.0 -f Dockerfile1 .'
            }
        }
		}
        stage('Déploiement des services') {
            steps {
             sh 'docker-compose -f docker-compose.yml up -d'
            }
        }
        stage('Test de l’application') {
            steps {
                sh 'docker-compose build'
                sh 'docker-compose up -d'
                sh 'sleep 10'
                sh 'curl http://localhost:8000' 
                sh 'docker-compose down'
            }
        }
        stage('Tag des images Docker') {
            steps {
                sh 'docker tag app_synergietransport:1.0.0 devsega/app_synergietransport:latest'
                sh 'docker tag db_synergietransport:1.0.0 devsega/db_synergietransport:latest'
            }
        }
        stage('Push des images Docker sur Docker Hub') {
            steps {
		
 
    withDockerRegistry([credentialsId: '32e93134-4755-41f7-b5b2-c7a7864885d1', url: 'https://index.docker.io/v1/']) {
                sh 'docker push devsega/app_synergietransport:latest'
		sh 'docker push devsega/db_synergietransport:latest' 
            }
        }
    }
}
	}	
