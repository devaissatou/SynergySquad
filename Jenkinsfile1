pipeline {
    agent any

    stages {
        stage('Récupération du code') {
            steps {
                git branch: 'dev-insa',
         credentialsId: '04c19f4d-d821-41f6-a943-e34f15367406',
          url: 'https://github.com/devaissatou/SynergySquad.git'
            }
        }
        stage('Build de l’image de l’application') {
            steps {
		dir("app") {
                    sh 'docker build -t synergysquad_php-apache-environment -f Dockerfile .'
                }
            }
        }
        stage('Build de l’image de la base de données') {
            steps {
		dir("app") {
                    sh 'docker build -t synergysquad_database-environment -f Dockerfile1 .'
                }
            }
        }
        stage('Déploiement des services') {
            steps {
                   sh 'docker-compose -f docker-compose.yml up -d'
            }
        }
        stage('Test de l’application') {
            steps {
                sh 'docker-compose build'
                sh 'docker-compose up -d'
                sh 'sleep 10'
                sh 'curl http://localhost:8000' 
                sh 'docker-compose down'
            }
        }
	stage('Tag des images Docker') {
           steps {
               script {
                   def buildNumber = env.BUILD_NUMBER
                   sh "docker tag synergiepipeline_php-apache-environment:latest appsynergietransport:1.0.${buildNumber}"
                   sh "docker tag synergiepipeline_database-environment:latest dbsynergietransport:1.0.${buildNumber}"
               }
           }
        }
	stage('Push des images Docker sur Docker Hub') {
   	    steps {
                withCredentials([string(credentialsId: 'DockeerhubAuth', variable: 'REGISTRY_PASSWORD')]) {
                sh 'docker login -u "$REGISTRY_USR" --password-stdin docker.io'
                sh 'docker push docker.io/appsynergietransport:1.0.${env.BUILD_NUMBER}'
                sh 'docker push docker.io/dbsynergietransport:1.0.${env.BUILD_NUMBER}'
       		 }
    	    }
	}
    }
}
