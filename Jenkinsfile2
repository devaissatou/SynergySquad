pipeline {
    agent any
    stages {
        stage('Récupération du code') {
            steps {
                git branch: 'xxx', url: 'https://github.com/your-repo/your-app.git'
            }
        }
        stage('Build de l’image de l’application') {
            steps {
                sh 'docker build -t app-image -f Dockerfile-app .'
            }
        }
        stage('Build de l’image de la base de données') {
            steps {
                sh 'docker build -t db-image -f Dockerfile-db .'
            }
        }
        stage('Déploiement de l’application sur Kubernetes') {
            steps {
                sh 'kubectl apply -f kubernetes/app-deployment.yml'
                sh 'kubectl apply -f kubernetes/db-deployment.yml'
                sh 'kubectl apply -f kubernetes/phpmyadmin-deployment.yml'
            }
        }
    }
}
